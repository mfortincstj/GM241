<Window x:Class="GM241.Fenetres.Produit.Extension"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Extension" Height="430" Width="1000" ResizeMode="CanMinimize">
    <Grid>

        <Label Content="Porte-outil : " HorizontalAlignment="Left" Margin="2,1,0,0" VerticalAlignment="Top" FontSize="20" Width="191"/>
        <ComboBox x:Name="listePorteOutil" HorizontalAlignment="Left" Margin="198,1,0,0" VerticalAlignment="Top" Width="281" Height="37"/>

        <Label Content="Emplacement : " HorizontalAlignment="Left" Margin="2,101,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.507,0.036" Width="191"/>
        <ComboBox x:Name="listeEmplacement" HorizontalAlignment="Left" Margin="198,101,0,0" VerticalAlignment="Top" Width="281" Height="37"/>

        <Label Content="Collet : " HorizontalAlignment="Left" Margin="2,201,0,0" VerticalAlignment="Top" FontSize="20" Width="191"/>
        <ComboBox x:Name="listeCollet" HorizontalAlignment="Left" Margin="198,201,0,0" VerticalAlignment="Top" Width="281" Height="37"/>

        <Label Content="Longueur shank : " HorizontalAlignment="Left" Margin="2,301,0,0" VerticalAlignment="Top" FontSize="20" Width="191"/>

        <Label Content="Diamètre shank : " HorizontalAlignment="Left" Margin="502,1,0,0" VerticalAlignment="Top" FontSize="20" Width="166"/>
        <TextBox x:Name="diamShank" HorizontalAlignment="Left" Height="37" Margin="673,1,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295" FontSize="18"/>

        <Label Content="Longueur total : " HorizontalAlignment="Left" Margin="502,101,0,0" VerticalAlignment="Top" FontSize="20" Width="166"/>
        <TextBox x:Name="longTotal" HorizontalAlignment="Left" Height="37" Margin="673,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295" FontSize="18"/>

        <Label Content="Quantité : " HorizontalAlignment="Left" Margin="502,201,0,0" VerticalAlignment="Top" FontSize="20" Width="166" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="quantite" HorizontalAlignment="Left" Height="37" Margin="673,201,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295" FontSize="18"/>

        <Button x:Name="btnAjouter" Content="Ajouter" Margin="122,355,698,0" VerticalAlignment="Top" Height="44"/>
        <Button x:Name="btnModif" Content="Modifier" Margin="392,355,428,0" VerticalAlignment="Top" Height="44" IsEnabled="False"/>
        <Button x:Name="btnSupprimer" Content="Supprimer" Margin="662,355,158,0" VerticalAlignment="Top" Height="44" IsEnabled="False"/>
        <Label Content="Image : " HorizontalAlignment="Left" Margin="502,301,0,0" VerticalAlignment="Top" FontSize="20" Width="166" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="img" HorizontalAlignment="Left" Height="37" Margin="673,301,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295" FontSize="18"/>
        <TextBox x:Name="longShank" HorizontalAlignment="Left" Height="37" Margin="198,301,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="281" FontSize="18"/>

    </Grid>
</Window>
