<Window x:Class="GM241.Fenetres.Produit.Plaquette"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plaquette" Height="550" Width="975" ResizeMode="CanMinimize">
    <Grid>

        <Label Content="Emplacement : " HorizontalAlignment="Left" Margin="1,0,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.507,0.036" Width="140"/>
        <ComboBox x:Name="listeEmplacement" HorizontalAlignment="Left" Margin="198,0,0,0" VerticalAlignment="Top" Width="285" Height="37"/>

        <Label Content="Nom : " HorizontalAlignment="Left" Margin="1,56,0,0" VerticalAlignment="Top" FontSize="20" Width="187"/>
        <TextBox x:Name="boxNom" HorizontalAlignment="Left" Height="37" Margin="198,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Type de plaquette : " HorizontalAlignment="Left" Margin="1,118,0,0" VerticalAlignment="Top" FontSize="20" Width="192"/>
        <TextBox x:Name="boxPlaquette" HorizontalAlignment="Left" Height="37" Margin="198,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Direction : " HorizontalAlignment="Left" Margin="1,180,0,0" VerticalAlignment="Top" FontSize="20" Width="192"/>
        <TextBox x:Name="boxDirection" HorizontalAlignment="Left" Height="37" Margin="198,180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Angle : " HorizontalAlignment="Left" Margin="1,242,0,0" VerticalAlignment="Top" FontSize="20" Width="102"/>
        <TextBox x:Name="boxAngle" HorizontalAlignment="Left" Height="37" Margin="198,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Dégagement : " HorizontalAlignment="Left" Margin="1,304,0,0" VerticalAlignment="Top" FontSize="20" Width="175"/>
        <TextBox x:Name="boxDegagement" HorizontalAlignment="Left" Height="37" Margin="198,304,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Grosseur : " HorizontalAlignment="Left" Margin="1,366,0,0" VerticalAlignment="Top" FontSize="20" Width="181"/>
        <TextBox x:Name="boxGrosseur" HorizontalAlignment="Left" Height="37" Margin="198,366,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Compagnie : " HorizontalAlignment="Left" Margin="511,0,0,0" VerticalAlignment="Top" FontSize="20" Width="174"/>
        <TextBox x:Name="boxCompagnie" HorizontalAlignment="Left" Height="37" Margin="690,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Quantité : " HorizontalAlignment="Left" Margin="511,56,0,0" VerticalAlignment="Top" FontSize="20" Width="174"/>
        <TextBox x:Name="boxQuantite" HorizontalAlignment="Left" Height="37" Margin="690,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Code Alpha : " HorizontalAlignment="Left" Margin="511,118,0,0" VerticalAlignment="Top" FontSize="20" Width="174" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="boxCodeAlpha" HorizontalAlignment="Left" Height="37" Margin="690,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Ordre : " HorizontalAlignment="Left" Margin="511,180,0,0" VerticalAlignment="Top" FontSize="20" Width="174" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="boxOrdre" HorizontalAlignment="Left" Height="37" Margin="690,180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Tour de fraiseuse : " HorizontalAlignment="Left" Margin="511,242,0,0" VerticalAlignment="Top" FontSize="20" Width="174" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="boxTourFraiseuse" HorizontalAlignment="Left" Height="37" Margin="690,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>

        <Label Content="Image : " HorizontalAlignment="Left" Margin="511,304,0,0" VerticalAlignment="Top" FontSize="20" Width="174" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="boxImage" HorizontalAlignment="Left" Height="37" Margin="690,304,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" FontSize="18"/>
        <Button x:Name="btnAjouter" Content="Ajouter" Margin="10,468,739,0" Click="btnAjout_Click" Height="44" VerticalAlignment="Top"/>
        <Button x:Name="btnModif" Content="Modifier" Margin="375,468,374,0" IsEnabled="False" Height="44" VerticalAlignment="Top"/>
        <Button x:Name="btnSupprimer" Content="Supprimer" Margin="739,468,10,0" IsEnabled="False" Height="44" VerticalAlignment="Top"/>

    </Grid>
</Window>
