<Window x:Class="GM241.Fenetres.Produit.Outil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Outil" Height="550" Width="975" ResizeMode="CanMinimize">
    <Grid>
        <Label Content="Type d'outil : " HorizontalAlignment="Left" Margin="1,0,0,0" VerticalAlignment="Top" FontSize="20" Width="187"/>
        <ComboBox x:Name="listeTypeOutil" HorizontalAlignment="Left" Margin="208,0,0,0" VerticalAlignment="Top" Width="275" Height="37"/>

        <Label Content="Emplacement : " HorizontalAlignment="Left" Margin="1,64,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.507,0.036" Width="140"/>
        <ComboBox x:Name="listeEmplacement" HorizontalAlignment="Left" Margin="208,64,0,0" VerticalAlignment="Top" Width="275" Height="37"/>

        <Label Content="Plaquette : " HorizontalAlignment="Left" Margin="1,134,0,0" VerticalAlignment="Top" FontSize="20" Width="140"/>
        <ComboBox x:Name="listePlaquette" HorizontalAlignment="Left" Margin="208,134,0,0" VerticalAlignment="Top" Width="275" Height="37"/>

        <Label Content="Nom : " HorizontalAlignment="Left" Margin="1,204,0,0" VerticalAlignment="Top" FontSize="20" Width="68"/>
        <TextBox x:Name="boxNom" HorizontalAlignment="Left" Height="37" Margin="208,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="275" FontSize="18"/>

        <Label Content="Quantité : " HorizontalAlignment="Left" Margin="1,274,0,0" VerticalAlignment="Top" FontSize="20" Width="102"/>
        <TextBox x:Name="boxQuantite" HorizontalAlignment="Left" Height="37" Margin="208,274,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="275" FontSize="18"/>

        <Label Content="Diamètre d'usinage : " HorizontalAlignment="Left" Margin="1,344,0,0" VerticalAlignment="Top" FontSize="20" Width="202"/>
        <TextBox x:Name="boxDiametreUsinage" HorizontalAlignment="Left" Height="37" Margin="208,344,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="275" FontSize="18"/>

        <Label Content="Diamètre de serrage : " HorizontalAlignment="Left" Margin="1,414,0,0" VerticalAlignment="Top" FontSize="20" Width="202"/>
        <TextBox x:Name="boxDiametreSerrage" HorizontalAlignment="Left" Height="37" Margin="208,414,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="275" FontSize="18"/>

        <Label Content="Longueur de coupe : " HorizontalAlignment="Left" Margin="511,0,0,0" VerticalAlignment="Top" FontSize="20" Width="199"/>
        <TextBox x:Name="boxLongueurCoupe" HorizontalAlignment="Left" Height="37" Margin="715,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="260" FontSize="18"/>

        <Label Content="Longueur totale : " HorizontalAlignment="Left" Margin="511,64,0,0" VerticalAlignment="Top" FontSize="20" Width="174"/>
        <TextBox x:Name="boxLonguerTotal" HorizontalAlignment="Left" Height="37" Margin="715,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="260" FontSize="18"/>

        <Label Content="Longueur du shank : " HorizontalAlignment="Left" Margin="511,134,0,0" VerticalAlignment="Top" FontSize="20" Width="199" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="boxLongueurShank" HorizontalAlignment="Left" Height="37" Margin="715,134,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="260" FontSize="18"/>

        <Label Content="Rayon de coin : " HorizontalAlignment="Left" Margin="511,204,0,0" VerticalAlignment="Top" FontSize="20" Width="174" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="boxRayonCoin" HorizontalAlignment="Left" Height="37" Margin="715,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="260" FontSize="18"/>

        <Label Content="Angle de pointe : " HorizontalAlignment="Left" Margin="511,274,0,0" VerticalAlignment="Top" FontSize="20" Width="174" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="boxAnglePointe" HorizontalAlignment="Left" Height="37" Margin="715,274,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="260" FontSize="18"/>

        <Label Content="Nombre de flute : " HorizontalAlignment="Left" Margin="511,344,0,0" VerticalAlignment="Top" FontSize="20" Width="174" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="boxNombreFlute" HorizontalAlignment="Left" Height="37" Margin="715,344,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="260" FontSize="18"/>

        <Label Content="Image : " HorizontalAlignment="Left" Margin="511,414,0,0" VerticalAlignment="Top" FontSize="20" Width="78" RenderTransformOrigin="0.129,0.432"/>
        <TextBox x:Name="boxImage" HorizontalAlignment="Left" Height="37" Margin="715,414,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="260" FontSize="18"/>
        <Button x:Name="btnAjouter" Content="Ajouter" Margin="10,468,739,0" Click="btnAjout_Click" Height="44" VerticalAlignment="Top"/>
        <Button x:Name="btnModif" Content="Modifier" Margin="375,468,374,0" IsEnabled="False" Height="44" VerticalAlignment="Top"/>
        <Button x:Name="btnSupprimer" Content="Supprimer" Margin="739,468,10,0" IsEnabled="False" Height="44" VerticalAlignment="Top"/>
    </Grid>
</Window>
