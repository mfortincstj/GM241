<Window x:Class="GM241.Fenetres.Inventaire.Inventaire"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventaire" Height="610" Width="1000" ResizeMode="CanMinimize">
    <Grid Margin="0,5,5,-5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Nom : " HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="76" Height="31"/>
        <TextBox x:Name="champNom" HorizontalAlignment="Left" Height="31" Margin="91,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="307"/>

        <Label Content="Description : " HorizontalAlignment="Left" Margin="10,166,0,0" VerticalAlignment="Top" Width="76" Height="31"/>
        <TextBox x:Name="champDescription" HorizontalAlignment="Left" Height="31" Margin="91,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="307"/>

        <Label Content="Matériaux : " HorizontalAlignment="Left" Margin="10,202,0,0" VerticalAlignment="Top" Width="76" Height="31"/>
        <TextBox x:Name="champMateriaux" HorizontalAlignment="Left" Height="31" Margin="91,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="307" IsEnabled="False"/>

        <Label Content="Catégorie : " HorizontalAlignment="Left" Margin="10,238,0,0" VerticalAlignment="Top" Width="76" Height="31"/>
        <ComboBox x:Name="cboxCategorie" HorizontalAlignment="Left" Margin="91,238,0,0" Width="307" Height="31" VerticalAlignment="Top" SelectionChanged="cboxCategorie_SelectionChanged"/>

        <RadioButton x:Name="radioEt" IsChecked="True" GroupName="etOu" Content="Et" HorizontalAlignment="Left" Margin="30,332,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioOu" GroupName="etOu" Content="Ou" HorizontalAlignment="Left" Margin="30,348,0,0" VerticalAlignment="Top"/>

        <RadioButton x:Name="radioRechComp" IsChecked="True" GroupName="recherche" Content="Recherche complète" HorizontalAlignment="Left" Margin="30,407,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioRechPart" GroupName="recherche" Content="Recherche partielle" HorizontalAlignment="Left" Margin="30,423,0,0" VerticalAlignment="Top"/>

        <Button x:Name="btnRecherche" Content="Recherche" Margin="10,491,94,0" Click="btnRecherche_Click" Height="32" VerticalAlignment="Top" IsDefault="True"/>

        <ComboBox x:Name="lstMenu" HorizontalAlignment="Left" Margin="208,528,0,0" VerticalAlignment="Top" Width="190" Height="34" SelectionChanged="lstMenu_SelectionChanged" FontSize="18"/>

        <Button x:Name="btnDetail" Content="Detail" Margin="403,528,442,0" IsEnabled="False" Click="btnDetail_Click" Grid.ColumnSpan="2" Height="34" VerticalAlignment="Top"/>

        <Button x:Name="btnDeconnexion" Content="Deconnexion" Margin="173,528,0,0" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="155" Click="btnDeconnexion_Click" Grid.Column="1"/>
        <Button x:Name="btnQuitter" Content="Quitter" Margin="333,528,10,0" Grid.Column="1" Click="btnQuitter_Click" Height="34" VerticalAlignment="Top"/>

        <Label Content="Inventaire" FontSize="36" FontWeight="Bold" HorizontalContentAlignment="Center" Margin="258,10,259,522" VerticalAlignment="Center" Height="58" Grid.ColumnSpan="2"/>
        <Label x:Name="authentifie1" Content="Authentifié : " HorizontalAlignment="Left" Margin="249,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Width="105" Grid.Column="1"/>
        <Label Content="Résultats" FontSize="20" Width="575" FontWeight="Bold" HorizontalContentAlignment="Center" Margin="405,82,9,447" HorizontalAlignment="Center" VerticalAlignment="Center" Height="43" Grid.ColumnSpan="2"/>
        <Label Content="Critères de recherche" FontSize="20" Width="398" FontWeight="Bold" HorizontalContentAlignment="Center" Margin="0,82,96,447" HorizontalAlignment="Center" VerticalAlignment="Center" Height="43"/>
        <Label Name="authentifie" Content="" HorizontalAlignment="Left" Margin="359,46,0,0" VerticalAlignment="Top" Height="31" Width="127" Grid.Column="1" FontSize="16"/>
        <Label Content="GM241 - Navigation : " HorizontalAlignment="Left" Margin="10,528,0,0" VerticalAlignment="Top" Width="193" FontSize="18" FontWeight="Bold" Height="34"/>
        <Label x:Name="role" Content="Connecté :  " HorizontalAlignment="Left" Margin="263,46,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Width="91" Grid.Column="1"/>
        <Label x:Name="usager" Content="" HorizontalAlignment="Left" Margin="359,10,0,0" VerticalAlignment="Top" Height="31" Width="126" Grid.Column="1" FontSize="16"/>
        
        <DataGrid x:Name="resGrid" HorizontalAlignment="Left" Margin="410,160,5,59" Grid.ColumnSpan="2" Height="363" Width="574" SelectionChanged="resGrid_SelectionChanged" CanUserReorderColumns="False" VerticalAlignment="Top"/>
    </Grid>
</Window>
